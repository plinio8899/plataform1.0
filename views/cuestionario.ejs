<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="kVK4n2UxORHkEt0uBIOV7HvBKH20dyDSZz6lkbSU90M" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="./css/light.css">
  <style>
    .bac{
        display: flex !important;
        align-items: center;
    }

    
    @keyframes fadeIn {
            from {
                opacity: 0;
                /* Elemento invisible al principio */
                transform: translateX(100px);
                /* Puede ajustarse según la dirección deseada */
            }

            to {
                opacity: 1;
                /* Elemento completamente visible al final */
                transform: translateX(0);
                /* Sin transformación al final */
            }
        }

        /* Aplica la animación al elemento */
        .fade {
            animation: fadeIn 0.3s ease-out forwards;
            /* Nombre de la animación, duración, y función de temporización */
        }
  </style>
    <title>Bienvenido</title>
</head>
<body>
    <% if(!id) {%>
        <h1>ha ocurrido un error con la sessión</h1>
        <a href="/auth">Volver a iniciar sesion</a>
    <% } else{ %>
        <% if(cuest == 1){ %>
            <div class="container fade">
                <br>
                <div class="bac">
                    <a class="btn btn-dark" href="/dashboard?id=<%= id %>"><span class="material-symbols-outlined">
                        arrow_back
                        </span></a>
                </div>
                <br>
                <center>
                    <h1 class="display-4">Preguntas</h1>
                    <hr>
                </center>
                <br><br>
                <div class="alert alert-dark" role="alert">
                        <form action="/dashboard/tareas/cuestionario?id=<%= id %>" method="POST">
                            <% cuesBd.forEach((cuesBd, index) => { %>
                                <br>
                                <label for="<%= index %>"><%= index + 1 %>. <%= cuesBd.preg %></label>
                                <br><br>
                                <input type="radio" style="margin-bottom: 3px;" name="<%= index %>" class="btn" value="<%= cuesBd.op1 %>"><label style="margin-left: 5px;">A. <%= cuesBd.op1 %></label>
                                <br>
                                <input type="radio" style="margin-bottom: 3px;" name="<%= index %>" class="btn" value="<%= cuesBd.op2 %>"><label style="margin-left: 5px;">B. <%= cuesBd.op2 %></label>
                                <br>
                                <input type="radio" style="margin-bottom: 3px;" name="<%= index %>" class="btn" value="<%= cuesBd.op3 %>"><label style="margin-left: 5px;">C. <%= cuesBd.op3 %></label>
                                <br>
                                <input type="radio" style="margin-bottom: 3px;" name="<%= index %>" class="btn" value="<%= cuesBd.op4 %>"><label style="margin-left: 5px;">D. <%= cuesBd.op4 %></label>
                                <hr>
                            <% }); %>
                            <center>
                                <br>
                                <button type="submit" class="btn btn-dark">Terminar</button>
                            </center>
                        </form>
                </div>
            </div>
        <% } else {%>
            <div class="container fade">
                <br>
                <div class="bac">
                    <a class="btn btn-dark" href="/dashboard?id=<%= id %>"><ion-icon name="arrow-round-back" class="btn-dark" size="large"></ion-icon></a>
                </div>
                <br>
                <center>
                    <h1 class="display-4">Tareas</h1>
                    <hr>
                </center>
                <br><br>
                <div class="alert alert-dark" role="alert">
                    <center>
                        <span>No hay cuestionarios disponibles...</span>
                    </center>
                </div>
            </div>
        <% } %>
    <% } %>
    <script src="./js/retro.js"></script>
</body>
</html>