                                <input type="number" name="puntos" class="form-control">
                                <br>
                                <select name="sexo" id="sexo" class="form-control">
                                    <option name="sexo" value="man">Hombres</option>
                                    <option name="sexo" value="woman">Mujeres</option>
                                </select>
                                <br>
                                <button type="submit" class="btn btn-dark">Subir</button>
                            </form>
                        </div>
                    </center>
            </div>
    <% } %>
