// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  phone String @unique
  password String
  name String
  points Int?
  cuesStatus Int?
  rango String?
  rol String?
  sexo String
}

model Cuest {
  id Int @id @default(autoincrement())
  preg String
  op1 String
  op2 String
  op3 String
  op4 String
  repTrue Int
  cuestPoints Int
}